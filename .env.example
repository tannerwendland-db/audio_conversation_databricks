# Audio Conversation RAG System - Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL (Databricks Lakebase) Configuration
# The hostname for your Databricks Lakebase PostgreSQL endpoint
POSTGRES_HOST=your-lakebase-host.databricks.com

# The port for PostgreSQL connection (default: 5432)
POSTGRES_PORT=5432

# Database username for Lakebase authentication
POSTGRES_USER=your-username

# Database password for Lakebase authentication
POSTGRES_PASSWORD=your-password

# The name of the database containing audio_rag schema
POSTGRES_DB=audio_rag

# Unity Catalog Volume Configuration
# Path to the UC Volume for storing audio recordings
# Format: /Volumes/<catalog>/<schema>/<volume>
VOLUME_PATH=/Volumes/main/default/audio-recordings

# Databricks Configuration
# Databricks workspace URL (e.g., https://your-workspace.databricks.com)
DATABRICKS_HOST=https://your-workspace.databricks.com

# Personal access token or service principal token for Databricks API authentication
DATABRICKS_TOKEN=your-databricks-token

# Model Serving Endpoint Configuration
# The name of the deployed audio diarization model serving endpoint
DIARIZATION_ENDPOINT=audio-diarization-endpoint

# Host for the Dash application
DASH_HOST=0.0.0.0

# Port for the Dash application
DASH_PORT=8050

# Enable debug mode (true/false) - should be false in production
DEBUG=true

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file directory
LOG_FILE_PATH=/var/log/audio_rag

# Vector Search Configuration
# Number of top results to return from similarity search
SIMILARITY_TOP_K=5

# Similarity threshold for vector search (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.7

# Audio Processing Configuration
# Maximum audio file size in MB
MAX_AUDIO_SIZE_MB=100

# Supported audio formats (comma-separated)
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac

# Chunk size for processing long audio files (in seconds)
AUDIO_CHUNK_SIZE_SECONDS=300
